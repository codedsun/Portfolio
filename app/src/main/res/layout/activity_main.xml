<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.suneet.portfolio.MainActivity"
    android:background="#211F37">
  <ImageView
      android:layout_width="match_parent"
      android:layout_height="290dp"
      android:src="@drawable/download"
      android:id="@+id/image"/>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="80dp"
          android:orientation="horizontal"
          android:layout_marginStart="15sp"
          android:layout_marginEnd="15sp"
          android:id="@+id/socialmedia">
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:id="@+id/fb"
            android:background="@drawable/acebook" />
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:id="@+id/twitter"
            android:background="@drawable/twi"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/me"
            android:id="@+id/medium"/>
        <ImageButton
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_marginStart="5dp"
            android:background="@drawable/quora"
            android:id="@+id/quora"/>

      </LinearLayout>

      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content"
          android:orientation="horizontal"
          android:layout_marginTop="15dp">
          <TextView

              android:layout_width="120dp"
              android:layout_height="30dp"
              android:layout_marginStart="10dp"
              android:text="ABOUT ME"
              android:gravity="center"
              android:id="@+id/aboutme"
              android:drawableLeft="@drawable/ic_person"
              android:textSize="17sp"
              android:fontFamily="sans-serif"/>
        <TextView

            android:layout_width="120dp"
            android:layout_height="30dp"
            android:text="SKILL-SET"
            android:gravity="center"
            android:id="@+id/skillset"
            android:drawableLeft="@drawable/ic_settings"
            android:textSize="17sp"
            android:fontFamily="sans-serif"/>
          <TextView

              android:layout_width="120dp"
              android:layout_height="30dp"
              android:text="PING ME"
              android:id="@+id/pingme"
              android:gravity="center"
              android:drawableLeft="@drawable/ic_message"
              android:textSize="17sp"
              android:fontFamily="sans-serif"/>


      </LinearLayout>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
      <LinearLayout
          android:layout_width="match_parent"
          android:layout_height="wrap_content">

          <TextView
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:id="@+id/textView"
              android:textSize="25sp"
              android:textColor="#FFFFFF" />
      </LinearLayout>

    </ScrollView>







</LinearLayout>
